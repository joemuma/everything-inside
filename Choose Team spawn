    Section:NewDropdown("Choose team to Spawn as", "DropdownInf", {"Prisioner", "Crim", "Guard", "Neutral", "exploit Neutral"}, function(currentOption)
    if currentOption == ("Prisioner") then
    crim = false
    guard = false
    neutral = false
    prisioner = true
    neutral1 = false
    getgenv().c = false
    wait()
    getgenv().c = true
    end
    if currentOption == ("Crim") then
    crim = false
    guard = false
    neutral = false
    prisioner = false
    neutral1 = false
    getgenv().c = false
    wait()
    getgenv().c = true
    end
    if currentOption == ("Guard") then
    crim = false
    guard = true
    neutral = false
    prisioner = false
    neutral1 = false
    getgenv().c = false
    wait()
    getgenv().c = true
    end
    if currentOption == ("Neutral") then
    crim = false
    guard = false
    neutral = true
    prisioner = false
    neutral1 = false
    getgenv().c = false
    wait()
    getgenv().c = true
    end
    if currentOption == ("exploit Neutral") then
    crim = false
    guard = false
    neutral = false
    prisioner = false
    neutral1 = true
    getgenv().c = false
    wait()
    getgenv().c = true
    end
    end)
